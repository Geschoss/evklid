{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "--std=c++17",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}",

                "${workspaceFolder}/src/*.cpp",
                
                "-I/usr/local/include/GLFW",
                "-L/usr/local/lib",
                "-lglfw",
                "-framework", 
                "Cocoa",
                "-framework",
                "OpenGL",
                "-framework",
                "IOKit",
                "-framework",
                "CoreVideo"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
