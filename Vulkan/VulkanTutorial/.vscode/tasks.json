{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "--std=c++17",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}",

                "${workspaceFolder}/src/*.cpp",

                "-I/usr/local/include",
                "-L/usr/local/lib",
                "-lglfw",
                "-lglew",
                "-lvulkan",
                "-framework",
                "Cocoa",
                "-framework",
                "OpenGL",
                "-framework",
                "IOKit",
                "-framework",
                "CoreVideo",
                "-framework",
                "GLUT"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "type": "shell",
            "label": "run active file",
            "command": "ls && ../build/${fileBasenameNoExtension}",
            "args": [],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "build & run active file",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": ["build active file", "run active file"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
