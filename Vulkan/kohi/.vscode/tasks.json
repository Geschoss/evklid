{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Engine",
            "command": "${workspaceFolder}/engine/build.sh",
            "options": {
                "cwd": "${workspaceFolder}/engine"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Build Testbed",
            "command": "${workspaceFolder}/testbed/build.sh",
            "options": {
                "cwd": "${workspaceFolder}/testbed"
            },
            "problemMatcher": ["$gcc"],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build Everything",
            "command": "${workspaceFolder}/build-all.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
